@model Library_project.Models.camera

@{
    ViewData["Title"] = "Add camera";
}

<div class="account-container">
    <div class="account-controls-panel">
        <div class="library-logo">
            Library Logo
        </div>
        <div class="user-info">
            <div class="user-pfp-container">
                <img src="~/images/pfp_male.svg" id="user-pfp-img" />
            </div>
            <h1 class="display-1">Name</h1>
        </div>
        <a class="account-nav" asp-area="" asp-controller="Home" asp-action="AdminDashboard">
            <i class="fa-solid fa-chart-bar"></i>
            <h2 class="display-2">Dashboard</h2>
        </a>
        <a class="account-nav active-l" asp-area="" asp-controller="Home" asp-action="AddMediaForm">
            <i class="fa-solid fa-boxes-stacked"></i>
            <h2 class="display-2">Inventory</h2>
        </a>
        <a class="account-nav">
            <i class="fa-solid fa-gear"></i>
            <h2 class="display-2">Settings</h2>
        </a>
        <a class="account-nav" id="account-signout-btn">
            <i class="fa-solid fa-arrow-right-from-bracket"></i>
            <h2 class="display-2">Sign out</h2>
        </a>
    </div>
    <div class="media-entry-container">
        <div class="media-form-header">
            <h1 class="display-1">Choose an entry type</h1>
            <h2 class="display-2" id="media-form-subheader"></h2>
            <label for="media-type"></label>
            <select name="media-type" id="media-type">
                <option><a>Computer</a></option>
                <option>Camera</option>
                <option>Projector</option>
                <option>Book</option>
                <option>Journal</option>
                <option>Movie</option>
                <option>Audiobook</option>
            </select>
        </div>
        <form class="media-entry-form" id="camera-entry-form" method="post" asp-action="@(Model is null ? "AddCamera" : "UpdateCamera")" asp-controller="AddMedia">
            <div class="input-wrapper">
                <label asp-for="brand">Brand</label>
                <input type="text" id="camera-brand" name="brand" value="@(Model is null ? "" : Model.brand)" />
                <span asp-validation-for="brand" class="text-danger"></span>
            </div>
            <div class="input-wrapper">
                <label asp-for="description">Description</label>
                <input type="text" id="camera-description" name="description" value="@(Model is null ? "" : Model.description)" />
            </div>
            <div class="input-wrapper">
                <label asp-for="lumens">Lumens</label>
                <input type="text" id="camera-lumens" name="lumens" value="@(Model is null ? "" : Model.lumens)" />
                <span asp-validation-for="lumens" class="text-danger"></span>
            </div>
            <div class="checkbox-wrapper">
                <input type="checkbox" value=true id="camera-availability" name="availability" @(Model is null ? "checked" : (Model.availability.Value ? "checked" : "")) />
                <label asp-for="availability">Availibility</label>
            </div>
            
            @if (Model is null)
            {
                <button type="submit" class="media-submit-btn" id="camera-submit-form">Submit</button>
            }
            else
            {
                <input asp-for="serialnumber" type="hidden" class="media-form-serialnumber" value="@Model.serialnumber"/>
                <div class="edit-form-controls">
                    <button type="reset" class="media-cancel-btn" id="camera-cancel-form">Cancel</button>
                    <button type="submit" class="media-save-btn" id="camera-save-form">Save</button>
                </div>
            }
        </form>
    </div>
    <div class="media-recent-transactions-panel">
        <div class="media-recent-transactions">
            <div class="recent-transactions-header">
                <h1 class="display-1">Current Inventory</h1>
                <h2 class="display-2" id="recent-transactions-subheader"></h2>
            </div>
            <div class="table-container" style="display:none">
                <table id="transactions-table" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Description</th>
                            <th>Lumens</th>
                            <th>Availability</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    let mediaList;
    let table;
    //Get list of cameras
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            url: '/Explore/GetCameraList',
            async: false,
            datatype: 'json',
            success: function (result) {
                mediaList = result;
            },
        });
        //Creating datatable
        table = $('#transactions-table').DataTable({
            data: mediaList,
            "columns": [
                { "data": "brand" },
                { "data": "description" },
                { "data": "lumens" },
                { "data": "availability" },
                {
                    "data": null,
                    "defaultContent": "<a class='edit-row-btn'><i class='fa-solid fa-pen-to-square'></i></a>"
                }
            ]
        });
        $('.table-container').show();
    });
    //Edit button
    $('#transactions-table').on('click', '.edit-row-btn', function () {
        let tr = $(this).closest('tr');
        let serialNo = table.row(tr).data().serialnumber;

        window.location.href = "/AddMedia/EditCameraForm?serialNo=" + serialNo;
    });
    //Cancel
    $('.media-entry-form').on('click', '.media-cancel-btn', function () {
        window.location.href = "/AddMedia/AddCamera";
    });
    //Save
    $('.media-entry-form').on('click', '.media-save-btn', function () {
        
    });
    $("#media-type").val("Camera");
    $('#camera-availability').on('change', function () {
        this.value = this.checked ? val(true) : val(false);
    });
</script>

@section scripts {
    <script src="~/js/addMediaForm.js" asp-append-version="true"></script>
}