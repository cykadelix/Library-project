@using Library_project.Data.Enums
@using Library_project.ViewModels.Audiobook
@model List<AudiobookViewModel>

@if (Model is null)
{
    <div class="empty-data-container">
        <img src="~/images/empty-data.svg" />
        <h1 clas="display-1">No items to show.</h1>
    </div>
}
else
{
    @foreach (var items in Model)
    {
        @if (items.availability == true)
        {
            <div class="media-display-item">
                <img class="media-item-img">
                <div class="media-display-text">
                    <h1 class="display-1">@items.title</h1>
                    <h2 class="display-2">Genre: @((genres)items.genre)</h2>
                    <h2 class="display-2">Narrator: @items.narrator</h2>
                    <h2 class="display-2">Author: @items.author</h2>
                    <h2 class="display-2">Length(hh:mm:ss): (@items.length)</h2>
                    <h3 class="display-3 media-checkout-btn"><a>Checkout<i class="fa-solid fa-arrow-right"></i></a></h3>
                </div>
            </div>
        }
    }
}



