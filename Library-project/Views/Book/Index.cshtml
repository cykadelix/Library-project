@using Library_project.Data.Enums
@using Library_project.ViewModels.Book
@model BookListViewModel;
@{
    ViewBag.Title = "Index";
}
<div class="media-display-container">
	@foreach (var item in Model.allBooks)
	{
		<div class="media-display-card">
			<h1>@item.title</h1>
			<h2>Written by @item.author</h2>
			<h2>Genre - @item.genres</h2>
			<img src="~/images/book-cover-placeholder.png"/>
		</div>
	}
</div>
<div>
    <a href="/Book/CreateBookView">Create a Book</a>
</div>